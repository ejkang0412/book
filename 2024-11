<body>
  <a class="back" href="index.html">← 메인으로 돌아가기</a>
  <h1 id="title">월별 큐레이션 카드뉴스</h1>

  <div class="slider-container">
    <div class="slider" id="slider"></div>

    <button class="arrow arrow-left" onclick="moveSlide(-1)">&#10094;</button>
    <button class="arrow arrow-right" onclick="moveSlide(1)">&#10095;</button>

    <div class="dots" id="dots-container"></div>
  </div>

  <script>
    // 여기 이미지 URL과 링크 배열만 수정하세요
    const images = [
      "https://example.com/image1.png",
      "https://example.com/image2.png",
      "https://example.com/image3.png",
    ];
    const links = [
      "#",
      "https://some.link/page2",
      "https://some.link/page3",
    ];
    const monthTitle = "2024년 XX월 큐레이션 카드뉴스";  // 여기 제목만 바꾸세요

    // 제목 설정
    document.getElementById('title').textContent = monthTitle;

    const slider = document.getElementById('slider');
    const dotsContainer = document.getElementById('dots-container');
    let currentSlide = 0;

    function createSlides() {
      images.forEach((src, i) => {
        const a = document.createElement('a');
        a.href = links[i] || '#';
        a.target = "_blank";
        const img = document.createElement('img');
        img.src = src;
        img.alt = `slide-${i+1}`;
        a.appendChild(img);
        slider.appendChild(a);
      });
    }

    function updateSlide() {
      slider.style.transform = `translateX(-${currentSlide * 100}%)`;
      updateDots();
    }

    function moveSlide(step) {
      currentSlide = (currentSlide + step + images.length) % images.length;
      updateSlide();
    }

    function createDots() {
      images.forEach((_, i) => {
        const dot = document.createElement('span');
        dot.classList.add('dot');
        dot.addEventListener('click', () => {
          currentSlide = i;
          updateSlide();
        });
        dotsContainer.appendChild(dot);
      });
    }

    function updateDots() {
      const dots = document.querySelectorAll('.dot');
      dots.forEach((dot, i) => {
        dot.classList.toggle('active', i === currentSlide);
      });
    }

    createSlides();
    createDots();
    updateSlide();
  </script>
</body>
</html>
